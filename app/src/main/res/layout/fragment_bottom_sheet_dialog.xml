<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".View.fragments.messages.bottomSheetDialogFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/newClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_plus"
            android:scaleType="fitCenter" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Add"

            android:padding="5dp"
            android:text="New Messages"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deleteClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_delete"
            android:scaleType="fitCenter" />
        <TextView

            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Add"
            android:padding="5dp"
            android:text="Delete Messages"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notificationClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_notifications"
            android:scaleType="fitCenter" />
        <TextView

            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Add"
            android:padding="5dp"
            android:text="Notification"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/urgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_baseline_assignment_late_24"
            android:scaleType="fitCenter" />
        <TextView

            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Add"
            android:padding="5dp"
            android:text="Mark Text as Urgent"
            android:textSize="20sp" />
    </LinearLayout>



    <LinearLayout
    android:id="@+id/resolveMessages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
        >

    <ImageView
        android:layout_gravity="center"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_baseline_assignment_turned_in_24"
        android:scaleType="fitCenter" />
    <TextView

        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Add"
        android:padding="5dp"
        android:text="Resolve Urgent Messages"
        android:textSize="20sp" />
    </LinearLayout>




</LinearLayout>